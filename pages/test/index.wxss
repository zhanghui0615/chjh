/* pages/test/index.wxss */
page{
  width: 100%;
  height: 100%;
}
page>view{
  width: 100%;
  height: 100%;
  padding: 32rpx 26rpx; 
  box-sizing: border-box;
}
.notice{
 width: 175rpx;
 height: 44rpx;
 background: #a8a8a8;
 border-radius: 21rpx;
 font-size: 24rpx;
 line-height: 42rpx;
 text-align: center;
 color: white;
}
.notice>image{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  margin-right: 8rpx;
}
.testTitle{
  text-align: center;
  font-size: 44rpx;
  width: 100%;
  padding: 208rpx 0 292rpx 0;
  box-sizing: border-box;
  color: white;
}
/* .testImg{
  height: 100rpx;
  margin: 60rpx 0;
} */
.testImg>image{
  width: 100%;
  height: 100%;
}
.testBtn{
  width: 100%;
}
.testBtn>view{
  width: 500rpx;
  height: 79rpx;
  border-radius: 40rpx;
  margin:16rpx auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 34rpx;
  line-height: 79rpx;
}
.testBtn>view:nth-child(1){
  color: white;
  position: relative;
}
.testBtn>view:nth-child(1) image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.testBtn>view:nth-child(2){
  background:rgba(255, 255, 255, .6);
  border: 2rpx solid #ef957e;
  color: #3d3d3d;
  box-sizing: border-box;
}
.popUps{
