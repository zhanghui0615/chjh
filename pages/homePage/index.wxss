/* pages/homePage/index.wxss */

page {
  background: #f3f3f3;
}

.homePageView {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 99;
  background: linear-gradient(#e13a0c, #e35913);
  height: 134rpx;
  /* border-bottom-left-radius: 40%;
  border-bottom-right-radius: 40%; */
  box-sizing: border-box;
}

.homePageView>text {
  line-height: 90rpx;
  color: white;
  font-size: 36rpx;
  font-weight: 300;
  text-align: center;
  width: 100%;
  display: block;
  font-weight: 400;
}

.homeContent {
  width: 100%;
  height: 300rpx;
  background: linear-gradient(#e35913, #e8971e);
  border-bottom-left-radius: 45%;
  border-bottom-right-radius: 45%;
}

.homess {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: relative;
  margin-top: 134rpx;
}

.homess input {
  width: 100%;
  height: 62rpx;
  background: #f3f3f3;
  border-radius: 10rpx;
  font-size: 24rpx;
  padding-left: 70rpx;
  box-sizing: border-box;
}

.homess image {
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
}

.lbt {
  width: 100%;
  height: 300rpx;
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.homerNav {
  width: 100%;
  margin-top: 40rpx;
  padding: 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  font-size: 28rpx;
  font-weight: 400;
  justify-content: space-between;
}

.homerNav view:nth-child(1) {
  margin-left: 0;
}

.homerNav view {
  width: 170rpx;
  height: 126rpx;
  float: left;
  position: relative;
}

.homerNav view image {
  width: 100%;
  height: 100%;
}

.homerNav view>text {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-size: 24rpx;
}

.popular {
  width: 100%;
}

.popularTitle {
  width: 100%;
  height: 88rpx;
  background: #fff;
  padding-right: 34rpx;
  box-sizing: border-box;
  position: relative;
}

.popularTitle>text {
  line-height: 84rpx;
  font-size: 32rpx;
  color: #000;
  font-weight: 400;
  padding-left: 34rpx;
}
.popularTitle image{
  width: 17rpx;
  height: 27rpx;
  position: absolute;
  top: 50%;
  right:0;
  transform: translateY( -50%);

}
.popularTitle>text::before {
  content: '';
  width: 14rpx;
  height: 42rpx;
  display: inline-block;
  background: #e1360c;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.popularTitle>view {
  float: right;
  line-height: 84rpx;
  font-size: 22rpx;
  color: #b6b6b6;
  font-weight: 400;
  position: relative;
}
.popularTitle>view:nth-child(2){
  padding-right: 20rpx;
}

.popularContent {
  width: 100%;
  padding: 15px;
  box-sizing: border-box;
  overflow: hidden;
}

.popularContent>view {
  width: 48%;
  background: white;
  border-radius: 10rpx;
  margin-bottom: 30px;
}

.popularContent>view:nth-child(2n) {
  float: right;
}

.popularContent>view:nth-child(2n-1) {
  float: left;
}

.popularContentImg {
  display: block;
  width: auto;
  margin: 0 auto; /*图片居中*/
  height: 232rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.popularNumber {
  padding: 20rpx 20rpx 10rpx;
  box-sizing: border-box;
  height: 82rpx;
}

.popularDetails {
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}

.popularDetails>view{
  height: 100%;
  display: inline-block;
  color: #e1360c;
  margin-right: 16rpx;
  vertical-align:bottom;
}

.popularDetails>text:nth-child(2) {
  font-size: 20rpx;
  color: #e5512c;
  display:inline-block;
  padding: 0 10rpx;
  height: 30rpx;
  border: 1rpx solid #e5512c;
  border-radius: 15rpx;
  text-align: center;
  line-height: 30rpx;
  margin-bottom: 10rpx;
}

.popularDetails image {
  float: right;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
}
