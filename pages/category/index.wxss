/* pages/category/index.wxss */
page,
page>view{
  height: 100%;
  overflow: hidden; 
}
.homess{
  width: 100%;
  padding:  0 30rpx;
  box-sizing: border-box;
  position:relative;
  margin-top: 20rpx;
}
.homess input{
  width: 100%;
  height: 62rpx;
  background: #f3f3f3;
  border-radius: 10rpx;
  font-size: 24rpx;
  padding-left: 70rpx;
  box-sizing: border-box;
}
.homess image{
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
}
.content{
  margin-top: 16rpx;
  overflow: hidden;
  height: 100%;
}
.categoryNavLeft{
  width: 170rpx;
  float: left;
  overflow: auto;
}
.categoryNavLeftView{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
}
.active{
  position: relative;
  background: #f3f3f3;
}
.active::after{
  content: '';
  width: 1rpx;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  border-left: 18rpx solid #e1360c;
}
.commodity{
  float: left;
  background: #f3f3f3;
  width: calc(100% - 170rpx);
  height: 100%;
}
.categoryNavRight{
  padding: 20rpx;
  box-sizing: border-box;
}
.categoryNavRight>view{
  width: 48.5%;
  background: white;
  border-radius:10rpx; 
  margin-bottom: 30rpx;
}
.categoryNavRight>view:nth-child(2n){
  float: right;
}
.categoryNavRight>view:nth-child(2n-1){
  float: left;
}
.categoryNavRight>view:nth-last-child(1){
  margin-bottom: 180rpx;
}
.popularContentImg{
  width: 100%;
  height: 232rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.popularNumber{
  padding: 20rpx 20rpx 10rpx;
  box-sizing:border-box;
  word-break:break-all;
}
.popularDetails{
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing:border-box;
  position: relative;
}
.popularDetails>view:nth-child(1){
  height: 100%;
  display: inline-block;
  color: #e1360c;
  margin-right: 16rpx;
  vertical-align:bottom;
}
.popularDetails>text:nth-child(2) {
  font-size: 20rpx;
  color: #e5512c;
  display:inline-block;
  padding: 0 10rpx;
  height: 30rpx;
  border: 1rpx solid #e5512c;
  border-radius: 15rpx;
  text-align: center;
  line-height: 30rpx;
  margin-bottom: 10rpx;
}

.popularDetails image{
  float: right;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
}
.taxis{
  width: 100%;
  height: 72rpx;
  background:white;
  display: flex;
  justify-content: space-around;
}
.taxis>view{
  text-align: center;
  line-height: 72rpx;
}
.taxis>view>view{
  display: inline-block;
  position: relative;
}
.taxis>view>view image{
  width: 15rpx;
  height: 27rpx;
  position: absolute;
  top: calc(50% - 27rpx);
  transform: translateY(calc(-50% + 17rpx));
}

.taxisColor{
  color: #e1360c;
}