page,page>view{
  height: 100%;
  background: #f3f3f3;
}

.homess {
  width: 100%;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  background: white;
}

.homess input {
  width: 100%;
  height: 62rpx;
  background: #f3f3f3;
  border-radius: 10rpx;
  font-size: 24rpx;
  padding-left: 70rpx;
  box-sizing: border-box;
}

.homess image {
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
}

.popularContent {
  width: 100%;
  padding: 15px;
  box-sizing: border-box;
  overflow: hidden;
}

.popularContent>view {
  width: 48%;
  background: white;
  border-radius: 10rpx;
  margin-bottom: 30px;
}

.popularContent>view:nth-child(2n) {
  float: right;
}

.popularContent>view:nth-child(2n-1) {
  float: left;
}

.popularContentImg {
  width: 100%;
  height: 340rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.popularNumber {
  padding: 20rpx 20rpx 10rpx;
  box-sizing: border-box;
}

.popularDetails {
  width: 100%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}

.popularDetails text:nth-child(1) {
  color: #e1360c;
  margin-right: 16rpx;
}

.popularDetails text:nth-child(2) {
  font-size: 20rpx;
  color: #e5512c;
  display:inline-block;
  padding: 0 10rpx;
  height: 30rpx;
  border: 1rpx solid #e5512c;
  border-radius: 15rpx;
  text-align: center;
  line-height: 30rpx;
}

.popularDetails image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}
